{% set page_title = 'Prezzo' %}
{% set page_subtitle = '' %}

{% extends '::base.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-money"></i>Prezzo</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <button class="btn yellow btn-xs" onclick="window.location='{{ path('prezzo_new') }}';">Nuovo prezzo</button></a>
                <div class="table-responsive">
                    <table class="table table-striped table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Dataprezzo</th>
                                <th>Vendita</th>
                                <th>Affitto</th>
                                <th>Prezzovendita</th>
                                <th>Prezzoaffitto</th>
                                <th>Trattabili</th>
                                <th>Id</th>
                                <th width="40">Op.</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{% if entity.dataPrezzo %}{{ entity.dataPrezzo|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td width="40" class="no-padding js-vendita" ref="{{ entity.id }}">
                                    {% if entity.vendita %}
                                        SI
                                    {% else %}
                                        NO
                                    {% endif %}
                                </td>
                                <td width="40" class="no-padding js-affitto" ref="{{ entity.id }}">
                                    {% if entity.affitto %}
                                        SI
                                    {% else %}
                                        NO
                                    {% endif %}
                                </td>
                                <td>{{ entity.prezzoVendita }}</td>
                                <td>{{ entity.prezzoAffitto }}</td>
                                <td width="40" class="no-padding js-trattabili" ref="{{ entity.id }}">
                                    {% if entity.trattabili %}
                                        SI
                                    {% else %}
                                        NO
                                    {% endif %}
                                </td>
                                <td>{{ entity.id }}</td>
                                <td>                            <button class="btn yellow btn-xs" onclick="window.location='{{ path('prezzo_edit', { 'id': entity.id }) }}';">edit</button></a>
                                </td>
                            </tr>
                        {% endfor %}


            </tbody>
        </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
    <div class="col-md-4">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-bar-chart-o"></i>Statistiche</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                TODO
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>

{% endblock %}
