{% extends '::base.html.twig' %}
{% form_theme form 'MetronicAdminBundle::form/empty.html.twig' %}

{% block js %}
<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
{% javascripts  
